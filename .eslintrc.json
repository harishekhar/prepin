{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "jquery": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    }
    ,
    "rules": {
        "semi": ["error", "always"],
        "eqeqeq": "error",
        "curly": "error",
        "quotes": ["error", "double"],
        // enable additional rules
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],

        // override default options for rules from base configurations
        "no-cond-assign": ["error", "always"],

        // disable rules from base configurations
        "no-console": "off",
        "camelcase": "error"
    }
}